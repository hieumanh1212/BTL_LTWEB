@using BTL_ConGa.Models;
@{
    ViewData["Title"] = "BaiViet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TinTuc>*@
@model List<TinTuc>;
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Bài viết</h5>
            <p>
                <a class="btn btn-primary" asp-action="Create">Thêm bài viết</a>
            </p>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable"
                                   width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info"
                                   style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã tin tức
                                        </th>
                                        <th>
                                            Ảnh đại diện
                                        </th>
                                        <th>
                                            Tiêu đề
                                        </th>
                                        <th>
                                            Nội dung
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MaTinTuc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AnhDaiDien)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TieuDe)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NoiDung)
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MaTinTuc">Chỉnh sửa</a> |
                                                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.MaTinTuc">Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @*@Html.PagedListPager(Model, page=>Url.Action("BaiViet", new{page=page}),
                    new X.PagedList.Web.Common.PagedListRenderOptions(){LiElementClasses = new List<String> {"page-item"},
                    PageClasses = new List<String> {"page-link"}})*@
                </div>
            </div>
        </div>
    </div>
</div>

