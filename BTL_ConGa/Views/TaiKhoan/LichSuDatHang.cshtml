@model List<BTL_ConGa.Models.LichSu.LichSuModel>

@{
    int[] soluongxuathien = new int[ViewBag.SoLuongHDB];
}

<!-- jQuery library -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<br />
<!-- Start Top Search -->
<div class="top-search">
    <div class="container">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-search"></i></span>
            <input type="text" class="form-control" placeholder="Search">
            <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
        </div>
    </div>
</div>
<!-- End Top Search -->
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Đơn đặt hàng của bạn</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Tài khoản của tôi</a></li>
                    <li class="breadcrumb-item active">Đơn đặt hàng của bạn</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<div class="container" style="margin-top: 80px">
    <div class="bw">
        <div class="dh">
            <div class="ly">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Ảnh món ăn</th>
                            <th>Tên món ăn</th>
                            <th>Ngày mua</th>
                            <th>Tổng hóa đơn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < ViewBag.SoLuongHDB; i++)
                        {
                            <tr>
                                <td>
                                    @{
                                        int count = 0;
                                    }
                                    @for (int j = 0; j < Model.Count; j++)
                                    {

                                        @if (count++ == 2)
                                        {
                                            continue;
                                        }
                                        @if (Model[j].MaHoaDon == ViewBag.DanhSachHDB[i].MaHoaDon)
                                        {
                                            soluongxuathien[i]++;
                                            <img src="@Url.Content("~/chicken/images/ThucDon/" + @Model[j].AnhDaiDien)" width="48" height="48" style="border-radius: 5px" />
                                            <br />
                                        }

                                    }

                                </td>
                                <td>
                                    @{
                                        int count1 = 0;
                                    }
                                    @for (int j = 0; j < Model.Count; j++)
                                    {
                                        @if (count1++ == 2)
                                        {
                                            continue;
                                        }
                                        @if (Model[j].MaHoaDon == ViewBag.DanhSachHDB[i].MaHoaDon)
                                        {
                                            <a href="../ChiTietMonAn/CanhGaSotNguVi">@Model[j].TenMonAn</a> <br />
                                        }

                                    }
                                </td>
                                <td>@ViewBag.DanhSachHDB[i].NgayTao.ToString("dd-MM-yyyy")</td>
                                <td>@ViewBag.DanhSachHDB[i].TongTien VND</td>
                                <td>
                                    <a id="ShowModal" class="btn btn-primary btn-sm" href="#exampleModal" data-toggle="modal"
                                   onclick="HienThiModal('@ViewBag.DanhSachHDB[i].NgayTao.ToString("dd-MM-yyyy")', @ViewBag.DanhSachHDB[i].TongTien, soluongxuathien[i])">Xem chi tiết</a>

                                </td>
                            </tr>


                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Chi tiết hóa đơn</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body ">
                    <div class="container-fluid my-10  d-flex  justify-content-center">
                        <div class="card card-4">
                            <div class="card-header bg-white">
                                <div class="media flex-sm-row flex-column-reverse justify-content-between  ">
                                    <div class="col my-auto"> <h4 class="mb-0">Lịch sử hóa đơn: <span id="IDMaHoaDon" class="change-color"> </span></h4> </div>
                                    <div class="col-auto text-center  my-auto pl-0 pt-sm-4"> <img class="img-fluid my-auto align-items-center mb-0 pt-3" src="~/chicken/images/logo/logochicken.png" width="115" height="115"> <p class="mb-4 pt-0 Glasses">Gà siêu ngon nhóm 04</p>  </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row justify-content-between mb-3">
                                    <div class="col-auto"> <h3 class="color-1 mb-0 change-color">Biên lai</h3> </div>

                                </div>
                                @*Một cái*@

                                <div id="CaiCucTo" class="row">
                                </div>



                                <div class="row mt-4">
                                    <div class="col">
                                        <div class="row justify-content-between">
                                            <div class="col-auto"><p class="mb-1 text-dark"><b>Chi tiết hóa đơn</b></p></div>
                                            <div class="flex-sm-col text-right col"> <p class="mb-1"><b>Tổng tiền</b></p> </div>
                                            <div class="flex-sm-col col-auto"> <p class="mb-1">4.835.000 VND</p> </div>
                                        </div>
                                        <div class="row justify-content-between">
                                            <div class="flex-sm-col text-right col"><p class="mb-1"> <b>Giảm giá</b></p> </div>
                                            <div class="flex-sm-col col-auto"><p class="mb-1">100000</p></div>
                                        </div>

                                    </div>
                                </div>
                                <div class="row invoice ">
                                    <div class="col">
                                        <p class="mb-1"> Số hóa đơn : 788152</p>
                                        <div id="NgayTao" class="mb-1"></div>
                                        <p class="mb-1">Mã voucher:18KU-62IIK</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="jumbotron-fluid">
                                    <div class="row justify-content-between ">
                                        <div class="col-sm-auto col-auto my-auto"><img class="img-fluid my-auto align-self-center " src="../chicken/images/logo/logochicken.png" width="115" height="115"></div>
                                        <div class="col-auto my-auto "><h2 class="mb-0 font-weight-bold">Tổng tiền phải trả</h2></div>
                                        <div class="col-auto my-auto ml-auto"><h1 id="TongTien" class="display-3 "></h1></div>
                                    </div>
                                    <div class="row mb-3 mt-3 mt-md-0">
                                        <div class="col-auto border-line"> <small class="text-white">PAN:AA02hDW7E</small></div>
                                        <div class="col-auto border-line"> <small class="text-white">CIN:UMMC20PTC </small></div>
                                        <div class="col-auto "><small class="text-white">GSTN:268FD07EXX </small> </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
<br />
<br />

<script>
    function HienThiModal(ngaytao, tien, soluong) {
        const ShowNgayTao = document.getElementById("NgayTao");
        const ShowTongTien = document.getElementById("TongTien");
        ShowNgayTao.innerHTML = "Ngày mua: " + ngaytao;
        ShowTongTien.innerHTML = tien;

        const ShowTenMonAn = document.getElementById("TenMonAn");
        const ShowSoLuongMonAn = document.getElementById("SoLuongMonAn");
        const ShowGiaTienMonAn = document.getElementById("GiaTienMonAn");

        const ShowCucTo = document.getElementById("CaiCucTo");

        string str = '';
        for (int i = 0; i < soluong; i++)   //Số lượng là số lượng chi tiết hóa đơn trong một hóa đơn
        {
                str += `<div class="col">
                                                        <div class="card card-2">
                                                            <div class="card-body">
                                                                <div class="media">
                                                                    <div class="sq align-self-center "> <img class="img-fluid  my-auto align-self-center mr-2 mr-md-4 pl-0 p-0 m-0" src="../chicken/images/thucdon/combo/canhgatruyenthong.png" width="135" height="135" /> </div>
                                                                    <div class="media-body my-auto text-right">

                                                                        <div class="row  my-auto flex-column flex-md-row">
                                                                            <div class="col-lg-4 col-md-4 col-sm-12">
                                                                                <a href="../ChiTietMonAn/CanhGaSotNguVi">
                                                                                    <h4 id="TenMonAn" class="mb-0">Hahaha</h4>
                                                                                </a>
                                                                            </div>
                                                                            <div class="col-lg-4 col-md-4 col-sm-12">
                                                                                <h4 id="SoLuongMonAn" class="mb-0">Hehehe</h4>
                                                                            </div>
                                                                            <div class="col-lg-4 col-md-4 col-sm-12">
                                                                                <h4 id="GiaTienMonAn" class="mb-0">Hohoho</h4>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>`
        }
        ShowCucTo.innerHTML = str;

    }
</script>
