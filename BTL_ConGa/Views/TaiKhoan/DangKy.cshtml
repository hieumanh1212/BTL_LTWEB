<!-- Start Contact Us  -->
<div class="contact-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-sm-12">
                <div class="contact-form-right">
                    <h2 style="text-align:center;">Đăng ký</h2>
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="Name" name="name" placeholder="Tên đăng nhập" required data-error="Nhập tên đăng nhập" style="">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="Phone" name="name" placeholder="Số điện thoại" required data-error="Nhập số điện thoại" style="">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="Email" name="name" placeholder="Email" required data-error="Nhập email" style="">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="password" placeholder="Mật khẩu" id="inputnewpassword" class="form-control" name="name" required data-error="Nhập mật khẩu" style="">
                                    <i class="fa-solid fas fa-eye" id="show-password5" style="position:absolute; top: 28%;right: 4%"></i>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="password" class="form-control" id="inputacceptnewpassword" name="name" placeholder="Xác nhận mật khẩu" required data-error="Xác nhận mật khẩu" style="">
                                    <i class="fa-solid fas fa-eye" id="show-password6" style="position:absolute; top: 28%;right: 4%"></i>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <button class="form-control" id="subject" style="background-color:red; border-radius: 20px;color:white;font-size:18px;font-weight:bold" onclick="sukienDangKy();">Đăng ký</button>
                                    <div class="help-block with-errors"></div>
                                    
                                </div>
                                <p style="text-align:center; font-size:20px;"><a asp-controller="TaiKhoan" asp-action="DangNhap">Quay trở lại trang đăng nhập</a></p>
                               
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script-->
<script>

    //Mật khẩu
    var passField1 = document.querySelector('#inputnewpassword');
    var btn1 = document.querySelector("#show-password5");
    btn1.onclick = function () {
        if (passField1.type === "password") {
            passField1.type = "text";
            btn1.className = "fa-solid fas fa-eye-slash"
        }
        else {
            passField1.type = "password";
            btn1.className = "fa-solid fas fa-eye"
        }
    }
    //Xác nhận mới khẩu
    var passField2 = document.querySelector('#inputacceptnewpassword');
    var btn2 = document.querySelector("#show-password6");
    btn2.onclick = function () {
        if (passField2.type === "password") {
            passField2.type = "text";
            btn2.className = "fa-solid fas fa-eye-slash"
        }
        else {
            passField2.type = "password";
            btn2.className = "fa-solid fas fa-eye"
        }
    }
</script>

@*Sự kiện đăng ký*@
<script type="text/javascript">
    function sukienDangKy() {
        var url = 'https://localhost:7067/api/TaiKhoanAPI' +
            $('input').eq(0).val() + '&name=' + $('input').eq(1).val() +
            '&adress=' + $('input').eq(2).val() + '&phoneNumber=' +
            $('input').eq(3).val();
        $.ajax({
            url: url,
            method: 'POST',
            contentType: 'json',
            dataType: 'json',
            error: function (response) {
                alert("Thêm mới không thành công");
            },
            success: function (reponse) {
                alert("Thêm mới thành công");
            }
        });
    }
</script>